{
  "name": "emergency-alerts-card",
  "version": "2.0.0",
  "description": "A custom Lovelace card for Emergency Alerts integration",
  "main": "dist/emergency-alerts-card.js",
  "scripts": {
    "build": "rollup -c",
    "build:deploy": "npm run build && npm run deploy",
    "deploy": "cp dist/emergency-alerts-card.js ../emergency-alerts-integration/config/www/",
    "dev": "rollup -c -w",
    "dev:deploy": "npm run build:deploy && npm run dev:watch",
    "dev:watch": "rollup -c -w --watch.onStart=\"npm run deploy\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "validate:hacs": "./validate-hacs.sh",
    "validate:hacs:official": "./validate-hacs-official.sh",
    "test:hacs": "./test-hacs-requirements.sh",
    "prepare": "husky"
  },
  "keywords": [
    "homeassistant",
    "lovelace",
    "custom-card",
    "emergency",
    "alerts"
  ],
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "author": "issmirnov",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.0.0",
    "rollup": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "lit": "^3.0.0"
  }
}
